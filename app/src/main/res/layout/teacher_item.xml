<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="250dp">
        <ImageView
            android:id="@+id/img_teacher"
            android:layout_width="170dp"
            android:layout_height="170dp"/>

        <TextView
            android:id="@+id/name_teacher"
            android:layout_width="170dp"
            android:text="Huỳnh Công Pháp"
            android:textStyle="bold"
            android:gravity="center"
            android:textSize="20dp"
            android:layout_height="45dp"
            android:layout_below="@id/img_teacher" />
        <TextView
            android:id="@+id/cv_teacher"
            android:gravity="center"
            android:layout_width="170dp"
            android:textSize="18dp"
            android:text="Trưởng Khoa"
            android:textStyle="italic"
            android:layout_height="35dp"
            android:layout_below="@id/name_teacher"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/img_teacher"
            android:text="Ngành:"
            android:textSize="25dp" />

        <TextView
            android:id="@+id/nganh_teacher"
            android:layout_width="164dp"
            android:textSize="22dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="78dp"
            android:layout_toRightOf="@id/img_teacher" />

        <LinearLayout
            android:layout_width="240dp"
            android:layout_marginTop="80dp"
            android:orientation="vertical"
            android:layout_height="200dp"
            android:layout_marginStart="-1dp"
            android:layout_toEndOf="@+id/img_teacher">
            <TextView
                android:layout_width="match_parent"
                android:text="Lĩnh vực giảng dạy và nghiên cứu:"
                android:textSize="22dp"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/lv_teacher"
                android:textSize="19dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </LinearLayout>
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#000000"/>

</LinearLayout>